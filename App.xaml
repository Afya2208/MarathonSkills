<Application x:Class="MarathonSkills.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MarathonSkills"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Control">
            <Setter Property="FontFamily" Value="Open Sans Light"></Setter>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Control}}">
            <Setter Property="Background" Value="#FFEBEBEB"></Setter>
            <Setter Property="Margin" Value="0,10,0,0"></Setter>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"></Setter>
                </Style>
            </Style.Resources>
        </Style>
        <Style TargetType="Button" x:Key="BigButton" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Height" Value="55"></Setter>
            <Setter Property="Width" Value="200"></Setter>
        </Style>
        <Style TargetType="Page">
            <Setter Property="Foreground" Value="#FF505050"></Setter>
        </Style>
        
    </Application.Resources>
</Application>
