<Page x:Class="MarathonSkills.Pages.CheckRunnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CheckRunnerPage">
    <Page.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource BigButton}">

        </Style>
    </Page.Resources>
    <DockPanel LastChildFill="False">
        <StackPanel Orientation="Vertical" DockPanel.Dock="Top" Margin="0,100,0,0">
            <Button x:Name="OldRunnerButton" Click="LoginButton_Click">Я участвовал ранее</Button>
            <Button x:Name="NewRunnerButton" Click="NewRunnerButton_Click">Я новый участник</Button>
        </StackPanel>
        <Button DockPanel.Dock="Bottom" x:Name="LoginButton" Width="70" Height="30" HorizontalAlignment="Right" Click="LoginButton_Click">Login</Button>
    </DockPanel>
</Page>
